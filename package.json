{
  "name": "clippy",
  "version": "1.0.0",
  "description": "Clipboard sharing app for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "build": "electron-builder",
    "dev": "concurrently \"npm run server\" \"npm run start\""
  },
  "keywords": [
    "clipboard",
    "sharing",
    "electron",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "express": "^4.21.2",
    "ws": "^8.14.0",
    "electron": "^28.0.0"
  },
  "build": {
    "appId": "com.yourteam.clippy",
    "productName": "Clippy",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    }
  }
}
